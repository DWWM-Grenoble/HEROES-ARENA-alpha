        "sass:dev":"sass --watch scss/main.scss:css/style.css --style expanded --source-map"
    },
    "dependencies": {
        "@netlify/functions": "^2.4.0"
    },
    "devDependencies": {
        "netlify-cli": "17.0.0"
    },
    "keywords": [
        "game",
        "heroes",
        "combat",
        "javascript",
        "netlify"
    ],
    "author": "Heroes Arena Team",
    "license":"MIT",
    "engines": {
        "node":">= 18.0.0"
    }
}