{
    "name":"heroes-arena",
    "version": "1.0.0",
    "description": "Jeu de combat de héros avec système de sauvegarde cloud",
    "main": "index.html",
    "type": "module",
    "scripts":{
        "dev": "python -m http.server 8000",
        "build": "npm run sass:build",
        "test": "node js/test-simple.js",
        "predeploy": "npm run build",
        "deploy": "gh-pages -d .",
        "sass:watch": "sass --watch scss/main.scss:css/style.css --style expanded",
        "sass:build":"sass scss/main.scss:css/style.css --style compressed",
        "sass:dev":"sass --watch scss/main.scss:css/style.css --style expanded --source-map"
    },
    "dependencies": {},
    "devDependencies": {
        "gh-pages": "^6.1.1",
        "sass": "^1.70.0"
    },
    "keywords": [
        "game",
        "heroes",
        "combat",
        "javascript",
        "netlify"
    ],
    "author": "Heroes Arena Team",
    "license":"MIT",
    "engines": {
        "node":">= 18.0.0"
    }
}